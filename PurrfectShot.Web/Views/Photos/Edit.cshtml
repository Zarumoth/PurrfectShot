@model PurrfectShot.Web.ViewModels.Photos.PhotoEditInputModel

@{
    ViewData["Title"] = "Промяна на снимка";
}

<div class="container mt-3">

    <!-- Breadcrumb Navigation -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none text-muted">Начало</a></li>
            <li class="breadcrumb-item"><a asp-controller="Cats" asp-action="Details" asp-route-id="@Model.CatId" class="text-decoration-none text-muted">@Model.CatName</a></li>
            <li class="breadcrumb-item"><a asp-controller="Photos" asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none text-muted">Снимка</a></li>
            <li class="breadcrumb-item active" aria-current="page">Редактиране</li>
        </ol>
    </nav>

    <h2 class="text-center my-4 text-primary">✏️ @ViewData["Title"]</h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" method="post" class="card p-4 shadow-sm border-0 bg-light rounded-4">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CatId" />
                <input type="hidden" asp-for="CatName" />
                <input type="hidden" asp-for="ImageUrl" />

                <!-- Picture Visual / Preview -->
                <div class="text-center mb-4">
                    <img src="@Model.ImageUrl" class="img-thumbnail rounded-3 shadow-sm"
                         style="max-height: 300px; object-fit: contain;" alt="Превю" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Caption" class="form-label fw-bold">Описание</label>
                    <textarea asp-for="Caption" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Caption" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Запази промените</button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Отказ</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

