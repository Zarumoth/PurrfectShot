@model PurrfectShot.Web.ViewModels.Cats.CatDeleteViewModel

@{
    ViewData["Title"] = $"Изтриване на профил - {Model.Name}";
}

<div class="container mt-3">

    <!-- Breadcrumb Navigation -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none text-muted">Начало</a></li>
            <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none text-muted">@Model.Name</a></li>
            <li class="breadcrumb-item active" aria-current="page">Изтриване</li>
        </ol>
    </nav>

    <h2 class="text-center my-4 text-danger">⚠️ Потвърждение за изтриване</h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 bg-light rounded-4">
                <div class="card-body p-5">
                    <div class="alert alert-danger text-center py-4">
                        <h4 class="alert-heading fw-bold">Внимание! 🛑</h4>
                        <p class="mb-0 fs-5">
                            Сигурни ли сте, че искате да изтриете профила на <strong>@Model.Name</strong>?
                        </p>
                        <hr>
                        <p class="small mb-0">
                            Това действие е необратимо. Всички снимки в албума и гласовете към тях ще бъдат изтрити завинаги.
                        </p>
                    </div>

                    <form asp-action="Delete" method="post" class="text-center mt-4">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                            <button type="submit" class="btn btn-danger btn-lg px-5 shadow">Да, изтрий всичко!</button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-lg px-5">Не, върни ме обратно</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}