@model PurrfectShot.Web.ViewModels.Cats.CatInputModel

@{
    ViewData["Title"] = "Добави Котка";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Add" method="post">

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Име</label>
                <input asp-for="Name" class="form-control" placeholder="Името на твоя космат приятел" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Breed" class="form-label">Порода</label>
                <input asp-for="Breed" class="form-control" placeholder="Напр. Tuxedo, European Shorthair, Egyptian Mau, и т.н." />
                <span asp-validation-for="Breed" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label">Описание</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Едно кратко есе за твоето коте"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Запиши Котката 🐱</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}