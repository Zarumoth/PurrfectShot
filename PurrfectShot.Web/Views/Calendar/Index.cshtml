@model IEnumerable<PurrfectShot.Web.ViewModels.Calendar.CalendarMonthViewModel>

@{
    ViewData["Title"] = "Календар";
}

<div class="text-center mb-5">
    <h1 class="display-5 text-primary fw-bold"> Котешки Календар</h1>
    <p class="lead text-muted">
        Всички най-добри моменти, подредени месец по месец.
    </p>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning text-center p-5 shadow-sm rounded-3">
        <h2 class="display-6"> Все още е празно тук!</h2>
        <p class="lead">Няма качени снимки в архива!</p>
        <a asp-controller="Photos" asp-action="Upload" class="btn btn-primary mt-3">
            📷 Качи Снимка
        </a>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var month in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm calendar-card position-relative overflow-hidden">

                    <div class="calendar-img-container">
                        <img src="@month.CoverImageUrl" class="card-img"
                             style="height: 300px; object-fit: cover; object-position: center;"
                             alt="@month.MonthName">

                        <div class="calendar-overlay"></div>

                        <div class="calendar-content">
                            <span class="badge bg-primary mb-2">📷 @month.PhotoCount снимки</span>
                            <h3 class="text-white fw-bold text-uppercase mb-0">@month.MonthName</h3>
                            <p class="text-white-50 small">@month.Year</p>

                            <div class="btn btn-sm btn-light mt-2 view-btn">Преглед</div>
                        </div>
                    </div>

                        <a asp-controller="Calendar"
                           asp-action="Month"
                           asp-route-year="@month.Year"
                           asp-route-month="@month.Month"
                           class="stretched-link">
                        </a>

                    </div>
                </div>
        }
    </div>
}